header.header-tour
    .container
        .row
            .col-12
                form.form-tour
                    .form-tour--left
                        .form-tour--left-inputs
                            .select-container-select2.tour
                                select.select2-select.tour
                                    option
                                    option Испания
                                    option Италия
                                    option Гренландия

                            .input-group.input-group-datepicker
                                input.datepicker(placeholder='Дата' required='')#datepicker1
                                label(for='datepicker1')
                                    include ../svgs/calendar.svg
                        .form-tour--left-sort
                            p Параметры сортировки
                            .select-container-select2.sort
                                select.select2-select.sort
                                    option От дешевых к дорогим
                                    option От дешевых к дорогим2
                                    option От дешевых к дорогим3

                    .form-tour--middle
                        ul
                            li
                                .radiocheck
                                    input#checkbox1(type='checkbox' checked='')
                                    label(for='checkbox1') Только все включено
                            li
                                .radiocheck
                                    input#checkbox2(type='checkbox' checked='')
                                    label(for='checkbox2') Неточная дата
                    .form-tour--right
                        .form-tour--right-submit
                            button(type='submit').button Поиск
                        .form-tour--right-prices
                            input(type='number').input-number#range-slider-input0
                            span Цена
                            input(type='number').input-number#range-slider-input1
                            #range-slider
