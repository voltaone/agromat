@import '../../utilities/vars'
@import '../../utilities/mixins'

header
  position relative

.header-ticket
  background $blue-back
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 100%
    height 137px

.header-blog
  background $blue-back
  padding-top 25px
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 100%
    height: 151px;

.header-tour
  background $blue-back
  padding-top 45px
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 100%
    height: 151px

.header-country
  background $blue-back
  padding-top 30px
  padding-bottom 4px
  margin-bottom 170px
  +mobile()
    margin-bottom 190px
  h1
    margin-bottom: 19px
    +mobile()
      margin-bottom 15px
  &--top
    display flex
    +mobile()
      flex-wrap wrap
    &-text
      flex 1 1 50%
      max-width 50%
      +mobile()
        flex 1 1 100%
        max-width 100%
    &-weather
      flex 1 1 158px
      max-width 158px
      +mobile()
        flex 1 1 100%
        max-width 100%


  .tour-advantages
    +mobile()
      padding-bottom 35px
    li
      padding-right 10px
      +mobile()
        margin-bottom 25px
      .tour-image
        svg g
          fill $white
      .tour-text
        color $white

.header-overview
  padding-top 7px
  position relative
  z-index 1
  margin-bottom 87px
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 0
    height 253px
    z-index: -1
    +portrait()
      height: 285px;
    +mobile()
      height 500px
  &--top
    padding-top 23px
    +mobile()
      padding-top 15px
    &-text
      h1
        margin-bottom 0
      p
        font-size: $s22
        color $white
        margin-bottom 6px
        +mobile()
          font-size $s18
          line-height: 1.39;
    &-info
      display flex
      align-items flex-end
      margin-bottom 8px
      +mobile()
        flex-wrap wrap
        padding-top 28px
      &--head
        flex 1 1 54%
        max-width 54%
        +portrait()
          flex 1 1 56%
          max-width 56%
        +mobile()
          flex 1 1 100%
          max-width 100%
        h4
          font-size $s30
          margin-bottom 4px
          +mobile()
            margin-bottom 20px
      &--weather
        flex 1 1 28%
        max-width 28%
        +portrait()
          flex 1 1 45%
          max-width 45%
        +mobile()
          flex 1 1 100%
          max-width 100%
        .ul-weather
          padding-top 0
  &--bottom
    .button
      max-width: 263px;
      box-shadow: 0 2px 35px 0 rgba(21, 24, 62, 0.28);
      +mobile()
        max-width 100%
    .tour-advantages
      padding-top 48px
      +mobile()
        padding-top 57px
      li
        flex 1 1 33.333333%
        max-width 33.33333%
        margin-bottom: 5px;
        +portrait()
          flex 1 1 50%
          max-width 50%
        +mobile()
          flex 1 1 50%
          max-width 50%

.header-overview--image
  position absolute
  top 0
  left 15px
  display flex
  height 380px
  width 100%
  overflow hidden
  display flex
  align-items center
  justify-content center
  img
    max-width 100%
  +mobile()
    position static
    height 188px
    margin-bottom 28px

.header-about
  background $blue-back
  padding-top 26px
  padding-bottom 7px
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 100%
    height: 120px;
    +mobile()
      height 40px
  h1
    text-align center
    margin-bottom 3px
  p
    text-align center
    font-size: $s22
    color $white
    line-height: 1

.header-faq
  background $blue-back
  padding-top 25px
  padding-bottom 39px
  +mobile()
    padding-bottom 13px
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 100%
    height: 93px;
    +mobile()
      height 60px
  h1
    text-align center
    margin-bottom 19px
  .ul-menu
    +portrait()
      float none
    li
      margin 0 22px
      +mobile()
        margin 0 7px 15px

      +portrait()
        margin 0 5px
      a
        width 105px
        text-align center
        +mobile()
          width auto

.header-blogin
  background $white
  padding-top 33px
  z-index 10
  &:after
    pseudo(block, absolute)
    background $blue-back
    left 0
    right 0
    top 0
    height: 245px;
    z-index -1

.header-blogin--container
  height 429px
  position relative
  z-index 10
  +portrait()
    height: 359px;
  +landscape()
    height: 290px;

.header-blogin
  margin-bottom 16px
  &--image
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    display flex
    align-items center
    justify-content center
    z-index -2
    overflow hidden
    &:after
      pseudo(block, absolute)
      opacity: 0.4;
      background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.0), #00000d);
      left 0
      right 0
      bottom 0
      height 297px
      z-index 1
    img
      min-height 100%
  &--text
    position absolute
    bottom 0
    left 0
    right 0
    z-index 2
    display flex
    flex-wrap wrap
    justify-content space-between
    padding-left 35px
    padding-right 50px
    padding-bottom 30px
    +mobile()
      padding-left 20px
      padding-right 20px
    &-head
      flex 1 1 100%
      max-width 100%
      h1
        margin-bottom 2px
    &-left
      p
        margin 0
        color $white
    &-right
      .blog-panel
        margin 0
        li
          color $white
          svg
            g
              fill $white
              opacity 1
