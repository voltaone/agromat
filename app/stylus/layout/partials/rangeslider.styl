#range-slider
  flex 1 1 147px
  max-width 147px
  border 0
  box-shadow none
  background #f0f6ff
  border-radius: 7px;
  height 5px
  margin-bottom: 38px

  &:after
    pseudo(block, absolute)
    height 5px
    border-radius: 7px;
    background #f0f6ff
    width calc(100% + 17px)
    left 0
    top 0
  +mobile()
    max-width 265px
    margin-bottom 56px

.noUi-horizontal .noUi-handle
  border 6px solid #2d80eb;
  box-shadow: 0 1px 4px 0 rgba(14, 53, 102, 0.38);
  border-radius 50%
  background #d6e8ff

  &:before, &:after
    display none
  &:focus
    outline none

.noUi-horizontal .noUi-handle
  width: 19px;
  height: 19px;

.noUi-connect
  background #000fcf
  border 0
  box-shadow none
  height 5px
  border-radius: 7px;

.noUi-base, .noUi-connects
  border-radius: 7px;