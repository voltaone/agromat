@import '../../utilities/vars'
@import '../../utilities/mixins'

//@import "../libs/rew-sidenav/sidenav.styl"
//@import "../libs/rew-downnav/downnav.styl"

nav
  background $blue-back
  padding 26px 0 3px
  position fixed
  top 0
  left 0
  right 0
  z-index 9999
  transitions()

nav.scroll
  padding 4px 0
  background $white
  box-shadow none
  box-shadow: 3px 4px 13px 0px rgba(47,47,47, .1);
  .link-logo
    max-width 102px
    svg
      g
        fill #6EADFF
  .menu
    padding-bottom 0
    li
      a
        color $black-text
  .menu-address
    color #6EADFF
    padding-top 11px
  .menu-phones
    height: 100%;
    padding-top 9px
    li a
      color #6EADFF
  .menu-social
    padding-top 10px
    li a svg g
      fill #6EADFF


.menu
  list-flex(row)
  justify-content space-between
  align-items center
  height 100%
  padding-bottom 16px
  transitions()
  li
    a
      display block
      font-size $s14
      color $blue-darktext
      &:hover
        color $white

.menu-address
  color $white
  font-size $s14
  display flex
  margin-bottom 0
  transitions()

.menu-social
  list-flex(row)
  justify-content flex-end
  align-items center
  padding 3px 0
  transitions()
  li
    margin-left 16px
    a
      display block
      &:hover
        opacity .5

.menu-phones
  list-flex(col)
  transitions()
  li
    a
      color $white
      display inline-block
      font-size: $s18
      font-weight: bold;
      letter-spacing: 0.6px
      line-height 1
      &:hover
        opacity .5

.nav-mobile
  display none
  +mobile()
    display block



.nav-icon
  width 30px
  height 22px
  position relative
  margin 14px 0
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $black
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px

.nav-icon.open
  span
    &:nth-child(1)
      top 18px
      width 0%
      left 50%
    &:nth-child(2)
      transform rotate(45deg)
    &:nth-child(3)
      transform rotate(-45deg)
    &:nth-child(4)
      top 18px
      width 0%
      left 50%