@import '../../utilities/vars'
@import '../../utilities/mixins'

//@import "../libs/rew-sidenav/sidenav.styl"
//@import "../libs/rew-downnav/downnav.styl"

nav
  background $blue-back
  padding 26px 0 3px
  position fixed
  top 0
  left 0
  right 0
  z-index 8999
  transitions()
  +mobile()
    padding 16px 0 15px

nav.scroll
  +custom-min(768px)
    padding 4px 0
    background $white
    box-shadow: 3px 4px 13px 0px rgba(47,47,47, .1);
    .link-logo
      max-width 102px
      svg
        g
          fill #6EADFF
    .menu
      padding-bottom 0
      +tablet()
        padding-top 20px
      li
        a
          color $black-text
    .menu-address
      color #6EADFF
      padding-top 11px
      +portrait()
        padding-top 0
        align-items center
        height 100%
    .menu-phones
      height: 100%;
      padding-top 9px
      li a
        color #6EADFF
    .menu-social
      padding-top 10px
      li a svg g
        fill #6EADFF


.menu
  list-flex(row)
  justify-content space-between
  align-items center
  height 100%
  padding-bottom 16px
  transitions()
  +tablet()
    padding-bottom 0
    align-items flex-start
    padding-top 10px
  +mobile()
    flex-direction column
    background #6eadff
    min-height 408px
    justify-content space-around
    padding-bottom 75px
  li
    a
      display block
      font-size $s14
      color $blue-darktext
      +portrait()
        font-size $s11
      +mobile()
        display inline-block
        font-size $s20
        color #000fcf

      &:hover
        color $white


.menu-address
  color $white
  font-size $s14
  display flex
  margin-bottom 0
  transitions()
  +portrait()
    font-size $s10
    padding-top 8px
  +mobile()
    color $black-text
    font-size 20px
    text-align center
    max-width unset
    margin 0 15px
    background $white
    padding-left 30px
    padding-right 30px
    padding-bottom 57px

.menu-social
  list-flex(row)
  justify-content flex-end
  align-items center
  padding 3px 0
  transitions()
  +portrait()
    flex-direction column
  +mobile()
    justify-content center
    margin-left 15px
    margin-right 15px
    background $white
    padding-bottom 52px
  li
    margin-left 16px
    +mobile()
      margin 0 27px
    a
      display block
      svg
        +portrait()
          max-width 15px
        +mobile()
          width auto
          min-height 30px
          g
            fill #000fcf
      &:hover
        opacity .5

.menu-phones
  list-flex(col)
  transitions()
  +mobile()
    padding-top 50px
    padding-bottom 33px
    margin-left 15px
    margin-right 15px
    background $white
  li
    +mobile()
      text-align center
      margin-bottom 22px
    a
      color $white
      display inline-block
      font-size: $s18
      font-weight: bold;
      letter-spacing: 0.6px
      line-height 1
      +tablet()
        font-size .75rem
      +portrait()
        font-size .5rem
      +mobile()
        font-size $s20
        color #000fcf
        text-decoration underline
        font-weight 400


      &:hover
        opacity .5

.nav-mobile
  display none
  +mobile()
    display block



.nav-icon
  width 28px
  height 22px
  position relative
  margin 9px 0
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $white
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px



#menu-panel
  display none
  background #6eadff
  margin-top 16px
  padding-bottom 60px
  overflow-x hidden !important
