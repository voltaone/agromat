@import '../../utilities/vars'
@import '../../utilities/mixins'

//@import "../libs/rew-sidenav/sidenav.styl"
//@import "../libs/rew-downnav/downnav.styl"

nav
  background $blue-back
  padding 26px 0 3px
  position fixed
  top 0
  left 0
  right 0
  z-index 9999
  transitions()

nav.scroll
  padding 14px 0

.menu
  list-flex(row)
  justify-content space-between
  align-items center
  height 100%
  padding-bottom 16px
  transitions()
  li
    a
      display block
      font-size $s14
      color $blue-darktext
      &:hover
        color $white

.menu-address
  color $white
  font-size $s14
  display flex
  align-items center
  margin-bottom 0

.menu-social
  list-flex(row)
  justify-content flex-end
  align-items center
  padding 3px 0
  li
    margin-left 16px
    a
      display block

.menu-phones
  list-flex(col)
  li
    a
      color $white
      display inline-block
      font-size: $s18
      font-weight: bold;
      letter-spacing: 0.6px
      line-height 1
      &:hover
        opacity .8

.nav-mobile
  display none
  +mobile()
    display block



.nav-icon
  width 30px
  height 22px
  position relative
  margin 14px 0
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $black
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px

.nav-icon.open
  span
    &:nth-child(1)
      top 18px
      width 0%
      left 50%
    &:nth-child(2)
      transform rotate(45deg)
    &:nth-child(3)
      transform rotate(-45deg)
    &:nth-child(4)
      top 18px
      width 0%
      left 50%