.blog-block
  display block
  margin-bottom 41px
  +mobile()
    margin-bottom 100px
  &--image
    height 250px
    margin-bottom 40px
    display flex
    justify-content center
    align-items center
    overflow hidden
    transitions()
    +mobile()
      height 188px
      margin-bottom 30px
    img
      min-height 100%
  &--text
    height 174px
    overflow hidden
    +portrait()
      height 210px
    +mobile()
      height 244px
    p
      font-size: $s14
      color: $black-text;
      +mobile()
        font-size $s16
        line-height 1.5

  &--panel
    display flex
    justify-content space-between
    +mobile()
      flex-wrap wrap
    ul
      display flex
      margin: 11px 0;
      +mobile()
        margin-bottom 40px
      li
        color rgba(47,47,47, .5)
        font-size: $s14
        letter-spacing: 1px;
        margin-right 16px
        display flex
        align-items center
        img
          margin-right 11px

    &-left
      flex 1 1 calc(100% - 263px)
      max-width calc(100% - 263px)
      +portrait()
        flex 1 1 55%
        max-width 55%
      +mobile()
        flex 1 1 100%
        max-width 100%

    &-right
      flex 1 1 263px
      max-width: 263px;
      opacity 0
      transitions()
      visibility hidden
      +portrait()
        flex 1 1 45%
        max-width 45%
        opacity 1
        visibility visible
      +mobile()
        flex 1 1 100%
        max-width 100%
        opacity 1
        visibility visible

  &:hover
    .blog-block--panel-right
      opacity 1
      visibility visible
    .blog-block--image
      opacity .7