.row-advantage
  position relative
  z-index 20
  .col-lg-4
    &:nth-child(even)
      margin-left 8.3333%
      +portrait()
        margin-left 0
      +mobile()
        margin-left 0
    &:nth-child(odd)
      margin-right 8.3333%
      +portrait()
        margin-right 0
      +mobile()
        margin-right 0


.advantage-block
  display flex
  justify-content space-between
  align-items center
  margin-bottom: 50px;
  +mobile()
    margin-bottom 47px
    align-items flex-start

  &--image
    flex 1 1 68px
    max-width 68px
    +mobile()
      max-width 53px
      flex 1 1 53px
    img
      max-width 68px
      +mobile()
        max-width 53px

  &--text
    flex 1 1 calc(100% - 68px - 29px)
    max-width calc(100% - 68px - 29px)
    +mobile()
      flex 1 1 calc(100% - 53px - 22px)
      max-width calc(100% - 53px - 22px)
    p
      font-size $s14
      margin-bottom 0
      +mobile()
        font-size $s16