@import '../../utilities/vars'
@import '../../utilities/mixins'

h1
  font($s30, $white, 700, 1.33)
  margin-bottom $s30
  +mobile()
    margin-bottom $s25

h2
  font($s30, $blue-text, 700, normal)
  margin-bottom 63px
  text-align: center
  +mobile()
    font-size: $s28
    line-height: 1.29;
    margin-bottom 32px


h3
  font($s26, $blue-text, 700, 1.15)
  margin-bottom $s22

  +mobile()
    font-size $s22
    margin-bottom 8px


h4
  font(1.5rem, $black, 600, normal)
  margin-bottom 1.75rem

h5
  font(1rem, $white, 700, normal)
  margin-bottom 0

h6
  font($s22, $white, 700, 1.36)
  margin-bottom $s11

  +mobile()
    font-size: $s28
    line-height: 1.07;
    margin-bottom 1rem


p
  font(1rem, $black, 400, normal)
  margin-bottom $s28

hr
  border: 0;
  height: 1px;
  background: $black
  margin 1em 0

.black
  color $black

.white
  color $white

.gray
  color $gray

.blue-text
  color #000fcf
  font-weight 700