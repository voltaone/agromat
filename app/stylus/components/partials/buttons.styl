@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  font-weight 500
  transitions()
  &:focus
    outline none

.button
  cursor pointer
  display block
  max-width 165px
  width 100%
  text-align center

  background $blue-darkback
  color $white

  padding-top: 14px;
  padding-bottom: 14px;

  letter-spacing: 1.9px;
  font-size $s18

  transitions()

  +mobile()
    padding-left 5px
    padding-right 5px

  &:hover
    color $blue-darkback
    background $blue-back2

  +mobile()
    font-size: $s22
    font-weight: bold;
    letter-spacing: 2px;

.button-switch
  position absolute
  z-index 20
  right: -17px;
  top: 9px;
  display block
  +mobile()
    right 17px
    top auto
    bottom -24px
    img
      width 37px
      transform rotate(270deg)

.button-light
  max-width 320px
  font-size: $s17
  font-weight: bold;
  letter-spacing: 0.7px;
  color: $blue-darkback
  background $blue-back2
  &:hover
    background $blue-darkback
    color $white
  +mobile()
    font-size: $s20
    letter-spacing: 2px;
    max-width unset


.button-advantage
  margin: 52px auto 8px;
  +mobile()
    margin-top 10px

.button-blog
  margin 0 auto 40px
  +mobile()
    background #000FCF
    color $white
    margin-bottom 48px
    max-width: 320px;

 .button-red
   background $red
   &:hover
      color: $blue-darkback
      background $blue-back2

.button-share
  max-width: 176px;
  width 100%
  height: 44px;
  background-color: #d6e8ff;
  margin 0 auto
  position relative
  span
    display flex
    align-items center
    justify-content center
    font-size: $s16
    font-weight: 700
    letter-spacing: 2px;
    text-align: center;
    color: #000fcf;
    height 100%
    +mobile()
      display none
  span.hidden
    display none
  ul
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    display flex
    height 100%
    visibility hidden
    opacity 0
    transitions()
    +mobile()
      opacity 1
      visibility visible
    li
      padding 0
      flex 1 1 25%
      max-width 25%
      &:before
        display none
      a
        display flex
        align-items center
        justify-content center
        background #000fcf
        height 100%
        svg g
          fill $white
        &:hover
          background #d6e8ff
          svg g
            fill  #000fcf
  &:hover
    ul
      opacity 1
      visibility visible

