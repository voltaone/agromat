.radiocheck
  position relative

  input
    position absolute
    opacity 0

  input + label
    position relative
    padding-left 23px
    cursor pointer
    color $white
    font-size: $s12
    line-height: 1.07;
    margin-bottom 0
    +portrait()
      font-size $s10
    &:before, &:after
      pseudo(block, absolute)
      top -1px
      left 0
      transitions()
      border-radius 50%

    &:before
      border 1px solid $white
      opacity 1
      width 14px
      height 14px

    &:after
      background $white
      opacity 0
      width 6px
      height 6px
      top: 3px;
      left: 4px;

  input[type='radio'] + label
    &:after, &:before
      border-radius 50%

  input:checked + label
    &:after
      opacity 1