@import '../../../utilities/vars'
@import '../../../utilities/mixins'

input[type='text'].error,
input[type='password'].error,
input[type='email'].error
  border-color red
  color red
  +placeholder()
    color red
  &:focus
    color inherit

input[type='checkbox'].error + label
  color red

input[type='radio'].error + label
  color red

.select-container-select2.error
  .select2-container--default .select2-selection--single .select2-selection__rendered
    background $red2
  .select2-container--default .select2-selection--single .select2-selection__placeholder
    color rgba(238, 87, 87, .5)
    svg g
      fill $red

.input-group.error
  label
    svg g
      fill $red
  input
    background $red2
    color $red
    +placeholder()
      color rgba(238, 87, 87, .5)

textarea.error
  background $red2
  color $red
  +placeholder()
    color rgba(238, 87, 87, .5)

.form-tickets--passengers.error
  .form-tickets--passengers-select
    background $red2
    color rgba(238, 87, 87, .5)
    label
      svg g
        fill rgb(238, 87, 87)
  .form-tickets--passengers-select:after, .form-tickets--passengers-select:before
      background rgba(238, 87, 87, .5)


