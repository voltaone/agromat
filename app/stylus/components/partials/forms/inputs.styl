@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  border 0
  border-radius: 0;
  padding 11px 15px 12px
  transitions()
  &:focus
    outline none
    border-color green
  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important  
  +placeholder()
    color rgba(47,47,47,.5)
    font-size $s14
    +mobile()
      font-size $s18

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none;
  margin: 0;

input[type=number]
  -moz-appearance:textfield;

textarea
  -webkit-appearance none
  resize none
  margin-bottom 1rem
  width 100%
  height 250px
  padding 11px 15px 12px
  +placeholder()
    color $gray
  &:focus
    outline none
    border-color green

label
  margin-bottom 0




.input-group
  position relative
  input
    padding 10px 15px 11px 59px;
    +mobile()
      padding: 15px 15px 16px 59px;
  label
    position absolute
    top: 9px;
    left: 20px;
    +mobile()
      top 15px

.input-group-datepicker
  label
    left: 19px
    +mobile()
      left 27px
    svg g
      transitions()
  input
    padding-left: 49px;
    +mobile()
      padding-left: 57px;